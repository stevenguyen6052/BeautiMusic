<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:padding="5dp">


    <ImageView
        android:id="@+id/alImgViewAlbum"
        android:layout_width="@dimen/item_grid_with"
        android:layout_height="@dimen/item_grid_height"
        android:src="@drawable/ic_empty_music" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_icon_music"
        android:layout_below="@+id/alImgViewAlbum"
        android:background="#3b000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alTvNameAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/name_album"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/alTvNameArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alTvNameAlbum"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:text="@string/name_artist"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>

</RelativeLayout>


