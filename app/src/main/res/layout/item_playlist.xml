<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingTop="6dp"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgArt"
            android:layout_width="@dimen/artItem"
            android:layout_height="@dimen/artItem"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/ic_splas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgMoreVertPl"
            android:layout_toRightOf="@id/imgArt"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvNamePlaylist"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                android:text="@string/name_playlist"
                android:textColor="@color/colorBack"
                android:textSize="@dimen/textH1" />

            <TextView
                android:id="@+id/tvSumSong"
                style="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/sum_song"
                android:textSize="@dimen/textH2" />


        </LinearLayout>

        <com.example.windows10gamer.beautimusic.utilities.NonScrollImageView
            android:id="@+id/imgMoreVertPl"
            android:layout_width="@dimen/more_vert_item"
            android:layout_height="@dimen/more_vert_item"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert_black_48dp" />

    </RelativeLayout>


</LinearLayout>