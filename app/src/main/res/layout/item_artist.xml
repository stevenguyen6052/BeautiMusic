<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/itemartist_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_empty_music"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_itemalbum"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_nameartist"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:maxLines="1"
            android:text="Name Artist"
            android:textColor="@color/colorWhite" />

        <TextView
            android:paddingLeft="8dp"
            android:id="@+id/item_sumg_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_nameartist"
            android:text="Sum Album   "
            android:textColor="@color/colorWhite" />


    </RelativeLayout>


</RelativeLayout>