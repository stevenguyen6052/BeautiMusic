<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/paddingtop_left"
    android:paddingTop="@dimen/paddingtop_left">

    <ImageView
        android:id="@+id/itemartist_img"
        android:layout_width="@dimen/width_height_image_item"
        android:layout_height="@dimen/width_height_image_item"
        android:background="@drawable/imagemusi"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_itemalbum"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_nameartist"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Name Artist"
            android:textColor="@color/colorWhite" />

        <TextView
            android:paddingLeft="8dp"
            android:id="@+id/item_sumg_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_nameartist"
            android:text="Sum Album   "
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/item_sumg_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_nameartist"
            android:layout_toRightOf="@id/item_sumg_album"
            android:text="Sumg Song"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>


</RelativeLayout>