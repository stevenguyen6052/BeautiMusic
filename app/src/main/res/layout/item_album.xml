<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/alImgViewAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alTvNameAlbum"
            style="@style/item_album_artist"
            android:text="@string/name_album" />

        <TextView
            android:id="@+id/alTvNameArtist"
            style="@style/item_album_artist"
            android:text="@string/name_artist"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

</RelativeLayout>