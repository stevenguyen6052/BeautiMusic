<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/alImgViewAlbum"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/album" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_itemalbum"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alTvNameAlbum"
                style="@style/item_album_artist"
                android:text="@string/name_album" />

            <TextView
                android:id="@+id/alTvNameArtist"
                style="@style/item_album_artist"
                android:text="@string/name_artist" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>