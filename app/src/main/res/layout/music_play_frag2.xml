<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/custom_toolbar"-->
        <!--android:id="@+id/toolbar">-->
    <!--</include>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ImageView
            android:id="@+id/background_playmusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/relaytiveMusicPlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/background_playsong"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/itmNameSong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:scrollHorizontally="true"
                    android:text="Tên bài hát"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/itmNameSingle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/itmNameSong"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Tên ca sĩ"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />
            </LinearLayout>

            <me.tankery.lib.circularseekbar.CircularSeekBar
                android:id="@+id/pItmSeekbar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:backgroundTintMode="screen" />

            <TextView
                android:id="@+id/pTvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="86dp"
                android:text="00:00"
                android:textColor="#ffffff"
                android:textSize="@dimen/tvtime_size" />

            <ImageView
                android:id="@+id/pShuffle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/pImgPlayPause"
                android:layout_alignRight="@+id/pImgPlayPause"
                android:layout_below="@+id/pTvTime"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/ic_shuffle_white_48dp" />

            <ImageView
                android:id="@+id/pRepeat"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_alignEnd="@+id/pImgNext"
                android:layout_alignRight="@+id/pImgNext"
                android:layout_alignTop="@+id/pShuffle"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/ic_repeat_white_48dp" />

            <ImageView
                android:id="@+id/pImgNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/custom_next"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/pTvTime"
                android:layout_toEndOf="@+id/pTvTime" />

            <ImageView
                android:id="@+id/pImgPlayPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                />

            <ImageView
                android:id="@+id/pImgPrevious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/pTvTime"
                android:layout_toStartOf="@+id/pTvTime"
                android:background="@drawable/custom_previous" />
            <ImageView
                android:id="@+id/pImgQueue"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_queue_music_white_48dp" />

        </RelativeLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorWhite">

        <ListView
            android:id="@+id/plistView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </ListView>
    </LinearLayout>
</LinearLayout>

