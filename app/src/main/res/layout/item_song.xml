<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/custom_click"
    >

        <ImageView
            android:id="@+id/ImgView"
            android:layout_width="@dimen/size_icon_music"
            android:layout_height="@dimen/size_icon_music"
            android:background="@drawable/icon_music"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TvNameSong"
                style="@style/ItemSong_ListSong"
                android:textSize="20sp"
                android:textColor="@color/colorBack"
                />

            <TextView
                android:id="@+id/TvNameSinger"
                style="@style/ItemSong_ListSong"
                android:textSize="16sp" />

        </LinearLayout>

</LinearLayout>