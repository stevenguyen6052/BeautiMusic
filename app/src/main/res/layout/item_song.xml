<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_click"
    android:orientation="horizontal"
    android:padding="5dp"

    >

    <ImageView
        android:id="@+id/ImgView"
        android:layout_width="@dimen/size_icon_music"
        android:layout_height="@dimen/size_icon_music" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/TvNameSong"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="Name Song"
            android:textColor="@color/colorBack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TvNameSinger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="Name Artist"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>