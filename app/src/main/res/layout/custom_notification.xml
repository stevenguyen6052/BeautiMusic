<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/image_notifi"
    android:orientation="horizontal"
    android:weightSum="10">

    <ImageView
        android:id="@+id/notifiIcoin"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_weight="3.5"
        android:src="@drawable/ic_empty_music" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:weightSum="10">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/notifiNameSong"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:text="Cơn mưa ngang qua"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/notifiNameArtist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:text="Sơn tùng MTP"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notifiPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/notifiPlay"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_skip_previous_white_48dp" />

            <ImageView
                android:id="@+id/notifiPlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_play_arrow_white_48dp" />

            <ImageView
                android:id="@+id/notifiNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/notifiPlay"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/notifiPlay"
                android:src="@drawable/ic_skip_next_white_48dp" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>