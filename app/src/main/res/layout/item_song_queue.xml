<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/itm_que_iconsong"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon_music" />

    <LinearLayout
        android:id="@+id/linear_layout_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/itm_que_iconsong"
        android:layout_toRightOf="@+id/itm_que_iconsong"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp">

        <TextView
            android:text="Name Song"
            android:id="@+id/itm_que_nameSong"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/itm_que_nameArtist"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Name Artist"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/handle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/move"
        android:scaleType="center" />

</RelativeLayout>