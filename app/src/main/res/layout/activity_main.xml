<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLinnearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.windows10gamer.beautimusic.view.activity.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:tabMode="fixed">

    </android.support.design.widget.TabLayout>
    <FrameLayout
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.9">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/mainLayoutControl"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/mainMiniControl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mainOpenPlayMusic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/dianhac1" />

                <LinearLayout
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mainOpenPlayMusic"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mainNameSong"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/mainOpenPlayMusic"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:scrollHorizontally="true"
                        android:text="Tên bài hát"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mainNameSingle"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainNameSong"
                        android:layout_toRightOf="@id/mainOpenPlayMusic"
                        android:ellipsize="end"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:scrollHorizontally="true"
                        android:text="Tên ca sĩ"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/mainControlPlay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

    </FrameLayout>




</LinearLayout>
