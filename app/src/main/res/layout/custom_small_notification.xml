<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/image_notifi"
    android:orientation="horizontal"
    android:weightSum="10">

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_empty_music"
         />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:maxLines="1"
            android:textSize="16sp"
            android:id="@+id/notifiNameSong"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="Chác ai đó sẽ vè"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:textSize="14sp"
            android:maxLines="1"
            android:id="@+id/notifiNameArtist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="Sơn Tùng MTP"
            android:textColor="@color/colorWhite" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/notifiPrevious"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_skip_previous_white_48dp" />

        <ImageView
            android:src="@drawable/ic_play_arrow_white_48dp"
            android:id="@+id/notifiPlay"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/notifiPrevious"
             />

        <ImageView
            android:id="@+id/notifiNext"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/notifiPlay"
            android:src="@drawable/ic_skip_next_white_48dp" />


    </RelativeLayout>


</LinearLayout>