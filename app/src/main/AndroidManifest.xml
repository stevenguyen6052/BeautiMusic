<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.windows10gamer.beautimusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.DetailArtist"></activity>
        <activity android:name=".view.activity.DetailAlbum"></activity>
        <activity android:name=".view.activity.PlayingQueue"></activity>

        <receiver android:name=".view.helper.notification.NotificationReceiver">
            <intent-filter>
                <action android:name="com.example.windows10gamer.beautimusic.previous" />
                <action android:name="com.example.windows10gamer.beautimusic.delete" />
                <action android:name="com.example.windows10gamer.beautimusic.pause" />
                <action android:name="com.example.windows10gamer.beautimusic.next" />
                <action android:name="com.example.windows10gamer.beautimusic.play" />
            </intent-filter>
        </receiver>

        <service android:name=".view.helper.service.MusicService" />

        <activity android:name=".view.activity.PlayMusicActivity"></activity>
    </application>

</manifest>